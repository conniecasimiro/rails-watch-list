<div class="container position-relative">

  <h1>My Lists</h1>
  <%@lists.each do |list| %>
     <% if list.photo.attached? %>
        <div class="card-category mt-3" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 500, crop: :fill %>')">
          <%= link_to list.name, list_path(list) %>
        </div>
      <% end %>
  <% end %>

  <ul class="list-unstyled mt-3"><li>
    <%= link_to "New list", new_list_path, class: "btn btn-warning btn-lg"%>
  </li></ul>
</div>
